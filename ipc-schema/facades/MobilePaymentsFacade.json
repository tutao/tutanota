{
	"name": "MobilePaymentsFacade",
	"type": "facade",
	"senders": ["web"],
	"receivers": ["ios"],
	"doc": "Operations for handling mobile payments.",
	"methods": {
		"requestSubscriptionToPlan": {
			"doc": "Display a pop-up for the user to start a subscription",
			"arg": [
				{
					"plan": "string"
				},
				{
					"interval": "number"
				},
				{
					"customerIdBytes": "bytes"
				}
			],
			"ret": "MobilePaymentResult"
		},
		"getPlanPrice": {
			"doc": "Returns a displayable price for a plan",
			"arg": [
				{
					"plan": "string"
				},
				{
					"interval": "number"
				}
			],
			"ret": "MobilePlanPrice?"
		},
		"getCurrentPlanPrice": {
			"doc": "Returns a displayable price for the current plan",
			"arg": [
				{
					"customerIdBytes": "bytes"
				}
			],
			"ret": "string?"
		}
	}
}
