# outputs the highest level of OS X sdk installed
OS_X_VERSIONS=$(xcodebuild -showsdks | sed -e '/./{H;$!d;}' -e 'x;/OS X SDKs/!d;' | grep -o '[0-9]*\.[0-9]* ');
echo $OS_X_VERSIONS | tr " " "\n" | sort -g | tail -1;