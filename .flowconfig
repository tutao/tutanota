[ignore]
# see https://github.com/facebook/flow/issues/869#issuecomment-256643823
.*/node_modules/.*
# unignore oxmsg so we can map to it (to use it's flow types)
!.*/node_modules/@tutao/oxmsg/.*
.*/build/.*
.*/resources/.*
.*/buildSrc/.*
.app-android/.*
.app-ios/.*
.fdroid-metadata-workaround/.*
make.js
dist.js

[libs]
flow
node_modules/@tutao/oxmsg/flow

[options]
module.ignore_non_literal_requires=true
include_warnings=true
module.name_mapper='^oxmsg$' -> '<PROJECT_ROOT>/node_modules/@tutao/oxmsg/lib/index.js'

[lints]
untyped-import=error
untyped-type-import=error
